# General
alias ll="ls -l"
alias lal="ls -al"

# Git
alias glg="git log --all --oneline --graph"
alias gpra="git pull --rebase --all"
alias git-pull-rebase-all="git pull --rebase --all"
# Empty Commit
alias gec="git commit -m 'Empty commit' --allow-empty"
alias git-empty-commit="git commit -m 'Empty commit' --allow-empty"
# Prune Branch(es)
alias grpo="git remote prune origin"
alias git-remote-prune-origin="git remote prune origin"
# Prune Tag(s)
alias gfpt="git fetch --prune --prune-tags"
alias git-fetch-prune-tags="git fetch --prune --prune-tags"

