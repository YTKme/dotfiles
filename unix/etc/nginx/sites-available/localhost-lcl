server {
    # 
    # listen 80 default_server;
    # listen [::]:80 default_server;
    listen 443 default_server;

    root /var/www/gruis-default;

    server_name localhost.lcl www.localhost.lcl;

    location / {
		try_files $uri $uri/ =404;
    }
}